{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
